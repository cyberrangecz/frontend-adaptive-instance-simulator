{
    "name": "daptive-model-simulator",
    "private": true,
    "scripts": {
        "ng": "ng",
        "start": "ng serve --configuration local --ssl",
        "build": "ng build",
        "watch": "ng build --watch --configuration development",
        "test": "ng test",
        "lint": "ng lint && npm run prettier-check",
        "e2e": "ng e2e",
        "ci-test": "ng test --browsers ChromeHeadless --watch=false",
        "prettier-check": "prettier --check \"projects/**/*.ts\"",
        "prettier-fix": "prettier --write \"./projects/**/*.ts\"",
        "build-example-app": "ng build adaptive-model-simulator-example-app --configuration production",
        "build-library": "ng build --configuration production adaptive-model-simulator",
        "create-package": "cd dist/adaptive-model-simulator && npm pack",
        "build-and-pack": "npm install && npm run build-library && npm run create-package",
        "ci-update-version": "cd projects/adaptive-model-simulator/ && npm version $TAG_VERSION",
        "ci-build-and-pack": "npm ci --cache .npm --prefer-offline && npm run build-library && npm run create-package",
        "ci-publish-package": "cd dist/adaptive-model-simulator && npm publish",
        "prepare": "husky"
    },
