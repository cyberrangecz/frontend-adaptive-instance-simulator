{
    "name": "daptive-model-simulator",
    "private": true,
    "scripts": {
        "ng": "ng",
        "start": "ng serve --configuration local --ssl",
        "build": "ng build",
        "watch": "ng build --watch --configuration development",
        "test": "ng test",
        "lint": "ng lint && npm run prettier-check",
        "e2e": "ng e2e",
        "ci-test": "ng test --browsers ChromeHeadless --watch=false",
        "prettier-check": "prettier --check \"projects/**/*.ts\"",
        "prettier-fix": "prettier --write \"./projects/**/*.ts\"",
        "build-example-app": "ng build kypo-adaptive-model-simulator-example --configuration production",
        "build-library": "ng build --configuration production kypo-adaptive-model-simulator",
        "create-package": "cd dist/kypo-adaptive-model-simulator && npm pack",
        "build-and-pack": "npm install && npm run build-library && npm run create-package",
        "ci-update-version": "cd projects/kypo-adaptive-model-simulator/ && npm version $TAG_VERSION",
        "ci-build-and-pack": "npm ci --cache .npm --prefer-offline && npm run build-library && npm run create-package",
        "ci-publish-package": "cd dist/kypo-adaptive-model-simulator && npm publish",
        "api": "json-server -w ./utils/json-server/db.js --routes ./utils/json-server/routes.json --middlewares ./utils/json-server/server.js",
        "prepare": "husky"
    },
    "dependencies": {
        "@angular-eslint/builder": "^18.4.3",
        "@angular-eslint/eslint-plugin": "^18.4.3",
        "@angular-eslint/eslint-plugin-template": "^18.4.3",
        "@angular-eslint/schematics": "^18.4.3",
        "@angular-eslint/template-parser": "^18.4.3",
        "@angular/animations": "^18.2.13",
        "@angular/cdk": "^18.2.14",
        "@angular/common": "^18.2.13",
        "@angular/compiler": "^18.2.13",
        "@angular/core": "^18.2.13",
        "@angular/forms": "^18.2.13",
        "@angular/material": "^18.2.13",
        "@angular/platform-browser": "^18.2.13",
        "@angular/platform-browser-dynamic": "^18.2.13",
        "@angular/router": "^18.2.13",
        "@cyberrangecz-platform/adaptive-transition-visualization": "^18.0.0",
        "@cyberrangecz-platform/adaptive-visualization": "^18.0.0",
        "@cyberrangecz-platform/d3-service": "^18.0.0",
        "@cyberrangecz-platform/training-api": "^18.0.0",
        "@cyberrangecz-platform/training-model": "^18.0.0",
        "@sentinel/auth": "^18.0.3",
        "@sentinel/common": "^18.0.4",
        "@sentinel/components": "^18.2.7",
        "@sentinel/layout": "^18.1.4",
        "@typescript-eslint/eslint-plugin": "^8.23.0",
        "@typescript-eslint/parser": "^8.23.0",
        "angular-oauth2-oidc": "^17.0.2",
        "angular-oauth2-oidc-jwks": "^17.0.2",
        "angular-file": "^4.0.2",
        "caret-pos": "^2.0.0",
        "d3": "^7.9.0",
        "d3-sankey": "^0.12.3",
        "eslint": "^9.19.0",
        "file-saver": "^2.0.5",
        "marked": "^12.0.2",
        "ngx-indexed-db": "^18.0.0",
        "rxjs": "^7.8.1",
        "tslib": "^2.7.0",
        "zone.js": "^0.14.10"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^18.2.14",
        "@angular/cli": "^18.2.14",
        "@angular/compiler-cli": "^18.2.13",
        "@types/d3": "^7.4.3",
        "@types/jasmine": "^5.1.4",
        "@types/marked": "^4.0.3",
        "@types/node": "^22.6.1",
        "husky": "^9.1.7",
        "jasmine-core": "^5.3.0",
        "json-server": "^0.17.4",
        "karma": "^6.4.4",
        "karma-chrome-launcher": "^3.2.0",
        "karma-coverage": "^2.2.1",
        "karma-coverage-istanbul-reporter": "^3.0.3",
        "karma-jasmine": "^5.1.0",
        "karma-jasmine-html-reporter": "^2.1.0",
        "ng-packagr": "^18.2.1",
        "prettier": "^3.4.2",
        "typescript": "5.5.4"
    }
}
